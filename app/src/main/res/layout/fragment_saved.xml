<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SavedFragment"
    android:layout_margin="30dp">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:text="Daftar tutorial yang telah kamu simpan"
            android:textColor="@color/purple_200"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSaved1"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="348dp"
        android:layout_height="104dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Add your item view layout here -->
            <ImageView
                android:id="@+id/gambarSaved1"
                android:layout_width="140dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:src="@drawable/koran_gradasi" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/textModulMateri1"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:textSize="14dp"
                android:text="Pemilahan Berita dan Mengidentifikasi Hoax"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSaved2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardSaved1"
        app:layout_constraintStart_toStartOf="@id/cardSaved1"
        android:layout_width="348dp"
        android:layout_height="104dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Add your item view layout here -->
            <ImageView
                android:id="@+id/gambarSaved2"
                android:layout_width="140dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:src="@drawable/adatsunda" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textSaved2"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textSize="14dp"
                android:text="Belajar Bahasa Sunda dari awal hingga mahir"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSaved3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardSaved2"
        app:layout_constraintStart_toStartOf="@id/cardSaved2"
        android:layout_width="348dp"
        android:layout_height="104dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Add your item view layout here -->
            <ImageView
                android:id="@+id/gambarSaved3"
                android:layout_width="140dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:src="@drawable/edukasi_seks" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textSaved3"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textSize="14dp"
                android:text="Edukasi Seks Bagi Generasi Muda"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardSaved4"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardSaved3"
        app:layout_constraintStart_toStartOf="@id/cardSaved3"
        android:layout_width="348dp"
        android:layout_height="104dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <!-- Add your item view layout here -->
            <ImageView
                android:id="@+id/gambarSaved4"
                android:layout_width="140dp"
                android:layout_height="105dp"
                android:scaleType="centerCrop"
                android:src="@drawable/taripiring" />

            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:id="@+id/textSaved4"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:textSize="14dp"
                android:text="Wawasan Budaya Sumatra Barat"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cardSaved4"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="Tambahkan"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
